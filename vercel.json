{
  "buildCommand": "cd client && bun run build",
  "outputDirectory": "dist/client",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": "content/**"
    }
  }
}
