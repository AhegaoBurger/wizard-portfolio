{
  "meta": {
    "id": "spells",
    "route": "/spells",
    "title": "Spells"
  },
  "schema": {
    "spells": {
      "type": "array",
      "label": "Spells",
      "items": {
        "type": "object",
        "fields": {
          "name": { "type": "string", "label": "Spell Name" },
          "type": { "type": "string", "label": "Type" },
          "level": { "type": "number", "label": "Level (1-5)" },
          "description": { "type": "string", "label": "Description" },
          "icon": { "type": "string", "label": "Icon" }
        }
      }
    }
  },
  "layout": {
    "type": "page",
    "behaviors": [{ "preset": "fadeIn" }],
    "children": [
      {
        "type": "window",
        "props": { "title": "Spellbook", "width": "w-80", "height": "h-96", "x": "left-4", "y": "top-4" },
        "children": [
          {
            "type": "list",
            "bind": "spells",
            "itemLayout": {
              "type": "flex",
              "props": { "direction": "row", "justify": "between", "align": "center" },
              "children": [
                { "type": "text", "field": "name", "props": { "variant": "label" } },
                { "type": "text", "field": "type", "props": { "variant": "caption" } }
              ]
            }
          }
        ]
      }
    ]
  },
  "data": {
