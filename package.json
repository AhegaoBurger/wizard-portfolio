{
  "name": "wizard-portfolio",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["client", "server", "shared"],
  "scripts": {
    "dev:client": "bun run --filter wizard-portfolio-client dev",
    "dev:server": "bun run --filter wizard-portfolio-server dev",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "build:client": "bun run --filter wizard-portfolio-client build",
    "build:server": "bun run --filter wizard-portfolio-server build",
    "build": "bun run build:client && bun run build:server",
    "start": "bun run --filter wizard-portfolio-server start",
    "lint": "bun run --filter wizard-portfolio-client lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
