{
  "name": "wizard-portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:client": "pnpm --filter wizard-portfolio-client dev",
    "dev:server": "pnpm --filter wizard-portfolio-server dev",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build:client": "pnpm --filter wizard-portfolio-client build",
    "build:server": "pnpm --filter wizard-portfolio-server build",
    "build": "pnpm build:client && pnpm build:server",
    "start": "pnpm --filter wizard-portfolio-server start",
    "lint": "pnpm --filter wizard-portfolio-client lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
